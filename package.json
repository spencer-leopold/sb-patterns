{
  "name": "@cmbr/sb-patterns",
  "version": "0.0.3",
  "description": "A library for creating patterns in Storybook that can be used with Drupal or other compatible platforms.",
  "keywords": [
    "storybook-addons",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spencer-leopold/sb-patterns.git"
  },
  "author": "Spencer Leopold <spencer.leopold@cmbr.co>",
  "license": "MIT",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "browser": "dist/client.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "yarn clean",
    "build": "tsup",
    "build:watch": "yarn build --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "yarn build && auto shipit"
  },
  "dependencies": {
    "@ngneat/falso": "^7.1.0",
    "html-dom-parser": "^4.0.0",
    "html-react-parser": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.34",
    "@types/webpack": "^5.28.2",
    "@types/webpack-env": "^1.18.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "ts-dedent": "^2.2.0",
    "tsup": "^6.6.3",
    "typescript": "^5.2.2",
    "zx": "^1.14.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/spencer-leopold/sb-patterns/issues"
  },
  "homepage": "https://github.com/spencer-leopold/sb-patterns#readme"
}
